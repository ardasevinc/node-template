{
  "name": "node-starter",
  "version": "1.0.0",
  "description": "node starter template",
  "main": "./src/main.ts",
  "scripts": {
    "dev": "ts-node ./src/main.ts",
    "prebuild": "rimraf ./dist",
    "build": "pnpm run prebuild && tsc",
    "start": "pnpm run build && NODE_ENV=production node ./dist/main.js"
  },
  "keywords": ["node", "node template", "node starter", "typescript", "swc"],
  "author": "Arda Sevinc <ardasevinc.technical@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@swc/core": "^1.3.82",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.16.0",
    "pnpm": ">=8"
  },
  "dependencies": {
    "rimraf": "^5.0.1"
  }
}
